<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Avid Footer Options -->
    <template id="avid_footer_switches" inherit_id="website.snippet_options">
        <xpath expr="//div/we-select[@data-variable='footer-template']" position="inside">
            <we-button title="avid_footer1"
            data-customize-website-views="theme_avid.avid_footer_1"
            data-customize-website-variable="'avid_footer1'"
            data-img="/theme_avid/static/src/img/header_icon/footer-option-1.svg"/>
            <we-button title="avid_footer2"
            data-customize-website-views="theme_avid.avid_footer_2"
            data-customize-website-variable="'avid_footer2'"
            data-img="/theme_avid/static/src/img/header_icon/footer-option-2.svg"/>
            <we-button title="avid_footer3"
            data-customize-website-views="theme_avid.avid_footer_3"
            data-customize-website-variable="'avid_footer3'"
            data-img="/theme_avid/static/src/img/header_icon/footer-option-3.svg"/>
        </xpath>
    </template>
</odoo>